<%= textline("Spellcasting: #{caster_name}") %>
<%= left("#{item_color}Spell%xn: #{spell_name}", 30) -%>
<%= left("#{item_color}Spell Level%xn: #{cast_level}", 24) -%>
<%= left("#{item_color}Tradition%xn: #{tradition}", 24) %>
<% if spell_type %>
<%= left("#{item_color}Spell Type%xn: #{spell_type}", 39) -%>
<% if is_focus_spell %>
<%= left("#{item_color}Focus Spell Type%xn: #{focus_type}", 39) %>
<% else %>
<%= left("",39) %>
<% end %>
<% end %>
<%= left("#{item_color}Spell DC%xn: #{dc}", 39) -%>
<%= left("#{item_color}Attack Bonus%xn: #{atk}", 39) %>
<% if targets %>
<%= "#{item_color}Targets%xn: #{targets}>" %>
<% end %>
<%= divider %>
<%= "Type #{title_color}spell #{spell_name}%xn for more information on the spell." %>
<%= footer %>
